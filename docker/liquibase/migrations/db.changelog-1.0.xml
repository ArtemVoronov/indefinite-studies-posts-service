<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet  id="1"  author="voronov">
        <createTable tableName="posts">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="author_uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="preview_text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="topic" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="tags">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="posts_and_tags">
            <column name="post_id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="comments">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="author_uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="linked_comment_id" type="int">
            </column>
            <column name="state" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="posts" columnNames="uuid" constraintName="posts_uuid_unique" />
        <sql dbms="postgresql">
            CREATE INDEX posts_uuid_hash_index ON posts USING HASH (uuid);
        </sql>
        <addUniqueConstraint tableName="comments" columnNames="uuid" constraintName="comments_uuid_unique" />
        <sql dbms="postgresql">
            CREATE INDEX comments_uuid_hash_index ON comments USING HASH (uuid);
        </sql>
        <addUniqueConstraint tableName="tags" columnNames="name" constraintName="tags_name_unique" />
        <addPrimaryKey tableName="posts_and_tags" columnNames="post_id,tag_id" constraintName="PK_posts_and_tags" />
        <rollback>         
            <dropTable tableName="comments"/>
            <dropTable tableName="posts_and_tags"/>
            <dropTable tableName="tags"/>
            <dropTable tableName="posts"/>
        </rollback>
    </changeSet>
</databaseChangeLog>